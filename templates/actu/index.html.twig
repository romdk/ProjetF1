{% extends 'base.html.twig' %}

{% block title %}F1ndout - Actualités{% endblock %}

{% block body %}
    <section id="actu">
        <div class="select">
            <span id="btnTous" class="active">Tous</span>
            <span id="btnFavoris">Favoris</span>
        </div>
            <div id="articles">
            <div id="tous">
                {% for article in articles %}
                    <div class="article">
                        <h2>{{ article.title }}</h2>
                        <p>{{ article.content }}</p>
                        <div class="infos">
                            <span>{{ article.source }}</span>
                            <span>{{ article.createdAt | date("d/m/Y") }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
            {% if app.user %}
                <div id="favoris">
                    {% for article in articlesFav %}
                        <div class="article">
                            <h2>{{ article.title }}</h2>
                            <p>{{ article.content }}</p>
                            <div class="infos">
                                <span>{{ article.source }}</span>
                                <span>{{ article.createdAt | date("d/m/Y") }}</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>
    <section id="footer">
        <footer>
            <div class="liens">
                <a href="">Accueil</a>
                <a href="">Politique de confidentialité</a>
                <a href="">Conditions générales d'utilisation</a>
                <a href="">Conditions générales de vente</a>
                <a href="mailto:f1ndout@contact.com">Nous contacter</a>
                <a href="https://github.com/romdk"><i class="fa-brands fa-github"></i></a>
            </div>
            <span>F1ndout © 2023</span>
        </footer>
    </section>
{% endblock %}
{% block javascripts %}
        <script src="{{ asset('javascript/actu.js') }}"></script>
{% endblock %}

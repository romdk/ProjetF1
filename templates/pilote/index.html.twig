{% extends 'base.html.twig' %}

{% block title %}F1ndout - {{  driverInformations.givenName ~ ' ' ~ driverInformations.familyName }} {% endblock %}

{% block body %}
<section id="pilote">
    <div class="container">
        <div class="portrait">
            <img src="{{ asset('assets/pilotes/' ~ id ~ '.png') }}" alt="">
        </div>
        <div class="informations">
            {% if app.user %} 
                <a data-fav href="{{ path('fav_pilote', {'id': driver.id}) }}" class="favoris {% if (app.user in driver.users) %} fav{% endif %}"><i class="fa-solid fa-star"></i></a>
            {% endif %}
            <h3>{{ driverInformations.givenName ~ ' ' ~ driverInformations.familyName }}</h3>
            <span>Date de naissance: {{ driverInformations.dateOfBirth|date("d/m/Y") }}</span>
            <span>Lieu de naissance: {{ driver.lieuNaissance }}</span>
            <span>Nationalité: {{ driverInformations.nationality }}</span>
            <span>Numéro: {{ driverInformations.permanentNumber }}</span>
            <span>Premier Grandprix: {{ driverSeasons[0].season }}</span>
            <span>Saisons disputés: {{ driverSeasons|length }}</span>
            <span>Courses disputés: {{ driverRaces|length }}</span>
            <span>Podiums: {{ nbPodiums }}</span>
            <span>Victoires: {{ nbVictoires }}</span>
            <span>Titres de champion: {{ nbTitres }}</span>
            <p>{{ driver.description }}</p>
            <div class="casque"><img src="{{ asset('assets/pilotes/' ~ id ~ '_casque.png') }}" alt=""></div>
        </div>
    </div>
</section>
<section id="footer">
    <footer>
        <div class="liens">
            <a href="">Accueil</a>
            <a href="">Politique de confidentialité</a>
            <a href="">Conditions générales d'utilisation</a>
            <a href="">Conditions générales de vente</a>
            <a href="mailto:f1ndout@contact.com">Nous contacter</a>
            <a href="https://github.com/romdk"><i class="fa-brands fa-github"></i></a>
        </div>
        <span>F1ndout © 2023</span>
    </footer>
</section>
{% endblock %}
{% block javascripts %}
        <script src="{{ asset('javascript/favoris.js') }}"></script>
{% endblock %}
